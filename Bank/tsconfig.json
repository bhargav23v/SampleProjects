{
  "compilerOptions": {
    "target": "es2015",                           // Specify ECMAScript target version
    "module": "esnext",                           // Specify module code generation
    "lib": ["es2018", "dom"],                    // Specify library files to be included in the compilation
    "outDir": "./out-tsc",                        // Redirect output structure to the directory
    "baseUrl": "./",                              // Base directory to resolve non-relative module names
    "sourceMap": true,                            // Generates corresponding '.map' file
    "declaration": false,                         // Generates corresponding '.d.ts' file
    "moduleResolution": "node",                   // Module resolution strategy
    "skipLibCheck": true,                         // Skip type checking of declaration files
    "strict": true,                               // Enable all strict type-checking options
    "noImplicitAny": true,                        // Raise error on expressions and declarations with an implied 'any' type
    // "suppressImplicitAnyIndexErrors": true,      // Suppress index signature errors
    "experimentalDecorators": true,               // Enables experimental support for decorators
    "emitDecoratorMetadata": true,                // Enables experimental support for emitting type metadata for decorators
    "resolveJsonModule": true                     // Allows importing JSON files
  },
  "include": [
    "src/**/*.ts"                                  // Include all TypeScript files in the src directory
  ],
  "exclude": [
    "node_modules",                                // Exclude node_modules directory
    "**/*.spec.ts"                                 // Exclude test files
  ]
}
